<li>
	<span class="title"><%= publication.title %></span>
	<span class="year"><%= publication.year %></span>
  <span class="content"><%= publication.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(publication.created_at) %> ago.
  </span>
	<% if current_user?(publication.user) %>
    <%= link_to "delete", publication, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: publication.content %>
  <% end %>
</li>

